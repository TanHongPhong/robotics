{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "PickPlan",
    "type": "object",
    "required": [
        "schema_version",
        "grid",
        "items"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "enum": [
                "1.0"
            ]
        },
        "grid": {
            "type": "object",
            "required": [
                "rows",
                "cols",
                "cell_id_range"
            ],
            "properties": {
                "rows": {
                    "type": "integer",
                    "const": 3
                },
                "cols": {
                    "type": "integer",
                    "const": 3
                },
                "cell_id_range": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    },
                    "minItems": 2,
                    "maxItems": 2,
                    "const": [
                        1,
                        9
                    ]
                }
            },
            "additionalProperties": false
        },
        "items": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "cell_id",
                    "product",
                    "pick"
                ],
                "properties": {
                    "cell_id": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 9
                    },
                    "product": {
                        "type": "string",
                        "minLength": 1
                    },
                    "pick": {
                        "type": "boolean"
                    }
                },
                "additionalProperties": false
            },
            "uniqueItems": false
        },
        "selection_source": {
            "type": "object",
            "properties": {
                "mode": {
                    "type": "string",
                    "enum": [
                        "web",
                        "voice_llm",
                        "mixed"
                    ]
                },
                "web_tick": {
                    "type": "boolean"
                },
                "voice_llm": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}